<component>



    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!-- batch files -->
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <lineEnding>dos</lineEnding>
            <includes>
                <include>**/*.cmd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*.sh</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/jsondoc-ui</directory>
            <outputDirectory>.//webapp</outputDirectory>
            <filtered>true</filtered>
            <excludes>
                <exclude>**/META-INF/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>../components/backend/target/jsondoc-ui</directory>
            <outputDirectory>.//webapp</outputDirectory>
            <filtered>false</filtered>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>.//webapp</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>org.maxur.perfmodel:client</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>.//lib</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>org.maxur.perfmodel:backend:*:jar-with-dependencies</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

    </dependencySets>

</component>