<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
                              http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>bin</id>

    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>${project.build.finalName}</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!-- batch files -->
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>${project.build.finalName}</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <lineEnding>dos</lineEnding>
            <includes>
                <include>**/*.cmd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/content</directory>
            <outputDirectory>${project.build.finalName}</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>**/*.sh</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>${project.build.finalName}/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>org.maxur.perfmodel:telnetcli</include>
                <include>org.maxur.perfmodel:server</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${project.build.finalName}/tomcat/webapp</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>org.maxur.perfmodel:client</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>*.html</include>
                    <include>css/*.*</include>
                    <include>js/*.*</include>
                    <include>img/*.*</include>
                </includes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${project.build.finalName}/tomcat/rest</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>org.maxur.perfmodel:backend:war</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

</assembly>
